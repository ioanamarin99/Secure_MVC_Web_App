@model IEnumerable<ISM_Y1_Marin_Ioana_Web_Cloud_Project.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
            </td>
            <td>
                    @if (User.IsInRole("DeleteEditRole"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.JobId">Details</a>
                    @if (User.IsInRole("DeleteEditRole"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
